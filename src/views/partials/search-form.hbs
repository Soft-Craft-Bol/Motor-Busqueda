<form action="/search" method="get" class="search-form-improved">
  <div class="search-container">
    <input 
      type="search" 
      name="q" 
      value="{{query}}" 
      class="search-input" 
      placeholder="Buscar juegos (ej. Catan, Monopoly)..."
      required
      aria-label="Buscar juegos de mesa"
    >
    <button type="submit" class="search-button">
      <svg class="search-icon" viewBox="0 0 24 24" width="20" height="20">
        <path fill="currentColor" d="M15.5 14h-.79l-.28-.27a6.5 6.5 0 0 0 1.48-5.34c-.47-2.78-2.79-5-5.59-5.34a6.505 6.505 0 0 0-7.27 7.27c.34 2.8 2.56 5.12 5.34 5.59a6.5 6.5 0 0 0 5.34-1.48l.27.28v.79l4.25 4.25c.41.41 1.08.41 1.49 0 .41-.41.41-1.08 0-1.49L15.5 14zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
      </svg>
      <span class="search-text">Buscar</span>
    </button>
  </div>

  <style>
    /* Estilos para el formulario mejorado */
    .search-form-improved {
      position: relative;
      max-width: 600px;
      margin: 0 auto;
    }
    
    .search-container {
      display: flex;
      align-items: center;
      position: relative;
      transition: all 0.3s ease;
    }
    
    .search-input {
      flex: 1;
      padding: 12px 20px;
      border: 2px solid #e0e0e0;
      border-radius: 30px;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      background-color: #fff;
    }
    
    .search-input:focus {
      outline: none;
      border-color: #5e35b1;
      box-shadow: 0 0 0 3px rgba(94, 53, 177, 0.2);
      transform: translateY(-1px);
    }
    
    .search-input::placeholder {
      color: #9e9e9e;
      transition: opacity 0.3s ease;
    }
    
    .search-input:focus::placeholder {
      opacity: 0.5;
    }
    
    .search-button {
      position: absolute;
      right: 5px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 8px 16px;
      background: linear-gradient(135deg, #5e35b1, #3949ab);
      color: white;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      height: calc(100% - 10px);
    }
    
    .search-button:hover {
      background: linear-gradient(135deg, #7e57c2, #5c6bc0);
      transform: translateY(-1px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    
    .search-button:active {
      transform: translateY(0);
    }
    
    .search-icon {
      transition: transform 0.3s ease;
    }
    
    .search-button:hover .search-icon {
      transform: scale(1.1);
    }
    
    .search-text {
      margin-left: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    /* Efecto de onda al hacer clic */
    @keyframes ripple {
      to {
        transform: scale(4);
        opacity: 0;
      }
    }
    
    .search-button::after {
      content: '';
      position: absolute;
      width: 20px;
      height: 20px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: scale(0);
      opacity: 1;
      pointer-events: none;
    }
    
    .search-button:active::after {
      animation: ripple 0.6s linear;
    }
    
    /* Responsive */
    @media (max-width: 576px) {
      .search-text {
        display: none;
      }
      
      .search-button {
        width: 40px;
        padding: 8px;
      }
      
      .search-icon {
        margin-right: 0;
      }
    }
  </style>
</form>