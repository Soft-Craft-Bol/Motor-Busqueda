    <path d="M0,0 v30 h60 v-30 z"/>
  </clipPath>
  <clipPath id="t">
    <path d="M30,15 h30 v15 z v-15 h-30 z M0,15 h30 v15 z v-15 h-30 z"/>
  </clipPath>
