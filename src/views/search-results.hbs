<h1 class="results-title">
  {{#if (eq lang 'es')}}Resultados para "{{query}}"{{/if}}
  {{#if (eq lang 'en')}}Results for "{{query}}"{{/if}}
  {{#if (eq lang 'pt')}}Resultados para "{{query}}"{{/if}}
  {{#if (eq lang 'de')}}Ergebnisse für "{{query}}"{{/if}}
  {{#if (eq lang 'fr')}}Résultats pour "{{query}}"{{/if}}
</h1>

{{#if isEmpty}}
  <div class="no-results">
    {{#if (eq lang 'es')}}No se encontraron juegos que coincidan con tu búsqueda.{{/if}}
    {{#if (eq lang 'en')}}No games found matching your search.{{/if}}
    {{#if (eq lang 'pt')}}Nenhum jogo encontrado correspondente à sua pesquisa.{{/if}}
    {{#if (eq lang 'de')}}Keine Spiele gefunden, die Ihrer Suche entsprechen.{{/if}}
    {{#if (eq lang 'fr')}}Aucun jeu trouvé correspondant à votre recherche.{{/if}}
  </div>
{{else}}
  <div class="games-grid">
    {{#each games}}
      <div class="game-card">
        <!-- Encabezado con el nombre del juego -->
        <div class="game-header">
          <h2 class="game-title">{{label}}</h2>
        </div>

        <!-- Imagen (si existe) -->
        {{#if thumbnail}}
          <div class="game-image-container">
            <img src="{{thumbnail}}" class="game-image" alt="{{label}}" loading="lazy">
          </div>
        {{/if}}

        <!-- Cuerpo con descripción -->
        <div class="game-body">
          {{#if genre}}
            <div class="game-tag genre-tag">
              <svg xmlns="http://www.w3.org/2000/svg" class="tag-icon" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
              </svg>
              <span>{{genre}}</span>
            </div>
          {{/if}}
          
          <p class="game-abstract">{{truncate abstract 2000}}</p>
          
          <!-- Detalles adicionales -->
          <div class="game-details">
            {{#if players}}
              <div class="detail-item">
                <svg xmlns="http://www.w3.org/2000/svg" class="detail-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z" />
                </svg>
                <div class="detail-text">
                  <span class="detail-label">
                    {{#if (eq ../lang 'es')}}Jugadores{{/if}}
                    {{#if (eq ../lang 'en')}}Players{{/if}}
                    {{#if (eq ../lang 'pt')}}Jogadores{{/if}}
                    {{#if (eq ../lang 'de')}}Spieler{{/if}}
                    {{#if (eq ../lang 'fr')}}Joueurs{{/if}}
                  </span>
                  <span class="detail-value">{{players}}</span>
                </div>
              </div>
            {{/if}}
            
            {{#if firstPlayed}}
              <div class="detail-item">
                <svg xmlns="http://www.w3.org/2000/svg" class="detail-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                <div class="detail-text">
                  <span class="detail-label">
                    {{#if (eq ../lang 'es')}}Lanzamiento{{/if}}
                    {{#if (eq ../lang 'en')}}Released{{/if}}
                    {{#if (eq ../lang 'pt')}}Lançamento{{/if}}
                    {{#if (eq ../lang 'de')}}Veröffentlichung{{/if}}
                    {{#if (eq ../lang 'fr')}}Sortie{{/if}}
                  </span>
                  <span class="detail-value">{{firstPlayed}}</span>
                </div>
              </div>
            {{/if}}
            
            {{#if equipment}}
              <div class="detail-item">
                <svg xmlns="http://www.w3.org/2000/svg" class="detail-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M11.17 3a1 1 0 01.98 1l1.12 7.2a3 3 0 002.97 2.6h3.28a1 1 0 010 2h-3.28a5 5 0 01-4.95-4.3l-1.12-7.2H5a3 3 0 00-3 3v8a3 3 0 003 3h8a3 3 0 003-3v-3a1 1 0 112 0v3a5 5 0 01-5 5H5a5 5 0 01-5-5v-8a5 5 0 015-5h6.17z" clip-rule="evenodd" />
                </svg>
                <div class="detail-text">
                  <span class="detail-label">
                    {{#if (eq ../lang 'es')}}Equipo{{/if}}
                    {{#if (eq ../lang 'en')}}Equipment{{/if}}
                    {{#if (eq ../lang 'pt')}}Equipamento{{/if}}
                    {{#if (eq ../lang 'de')}}Ausrüstung{{/if}}
                    {{#if (eq ../lang 'fr')}}Équipement{{/if}}
                  </span>
                  <span class="detail-value">{{equipment}}</span>
                </div>
              </div>
            {{/if}}
          </div>
        </div>

        <!-- Enlace a la página del juego -->
        <div class="game-footer">
          <h3 class="references-title">
            {{#if (eq ../lang 'es')}}Referencias{{/if}}
            {{#if (eq ../lang 'en')}}References{{/if}}
            {{#if (eq ../lang 'pt')}}Referências{{/if}}
            {{#if (eq ../lang 'de')}}Referenzen{{/if}}
            {{#if (eq ../lang 'fr')}}Références{{/if}}
          </h3>
          <div class="game-links">
            {{#if genre}}
              <a href="{{genre}}" class="game-link" target="_blank" rel="noopener noreferrer">
                <svg xmlns="http://www.w3.org/2000/svg" class="link-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
                </svg>
                <span>Género</span>
              </a>
            {{/if}}
            {{#if dbpediaPage}}
              <a href="{{dbpediaPage}}" class="game-link" target="_blank" rel="noopener noreferrer">
                <svg xmlns="http://www.w3.org/2000/svg" class="link-icon" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                </svg>
                <span>DBPedia</span>
              </a>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}

<style>
  :root {
    --primary-color: #4f46e5;
    --secondary-color: #6366f1;
    --text-color: #1f2937;
    --light-text: #6b7280;
    --bg-color: #f9fafb;
    --card-bg: #ffffff;
    --border-color: #e5e7eb;
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --radius: 12px;
    --transition: all 0.3s ease;
  }

  .results-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 2rem;
    text-align: center;
  }

  .no-results {
    text-align: center;
    padding: 2rem;
    background-color: var(--card-bg);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    color: var(--light-text);
    max-width: 600px;
    margin: 0 auto;
  }

  .games-grid {
    gap: 2rem;
    padding: 1rem 0;
  }

  .game-card {
    background-color: var(--card-bg);
    border-radius: var(--radius);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
    display: flex;
    flex-direction: column;
  }

  .game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .game-header {
    padding: 1.5rem 1.5rem 0;
  }

  .game-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-color);
    margin: 0;
  }

  .game-image-container {
    width: 100%;
    overflow: hidden;
    margin: 1rem 0;
  }

  .game-image {
    object-fit: cover;
    transition: var(--transition);
    display: flex;
margin: 0 auto;
  }

  .game-card:hover .game-image {
    transform: scale(1.05);
  }

  .game-body {
    padding: 0 1.5rem;
    flex-grow: 1;
  }

  .game-tag {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    margin-bottom: 1rem;
    background-color: #e0e7ff;
    color: var(--primary-color);
  }

  .tag-icon {
    width: 0.75rem;
    height: 0.75rem;
    margin-right: 0.25rem;
  }

  .game-abstract {
    color: var(--light-text);
    font-size: 0.875rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .game-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .detail-icon {
    width: 1rem;
    height: 1rem;
    color: var(--light-text);
    flex-shrink: 0;
  }

  .detail-text {
    display: flex;
    flex-direction: column;
  }

  .detail-label {
    font-size: 0.75rem;
    color: var(--light-text);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .detail-value {
    font-size: 0.875rem;
    color: var(--text-color);
    font-weight: 500;
  }

  .game-footer {
    padding: 1rem 1.5rem;
    background-color: #f8f9fa;
    border-top: 1px solid var(--border-color);
  }

  .references-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--light-text);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .game-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .game-link {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--primary-color);
    background-color: #e0e7ff;
    text-decoration: none;
    transition: var(--transition);
  }

  .game-link:hover {
    background-color: #c7d2fe;
    color: #4338ca;
  }

  .link-icon {
    width: 0.75rem;
    height: 0.75rem;
    margin-right: 0.375rem;
  }

  @media (max-width: 768px) {
    .games-grid {
      grid-template-columns: 1fr;
    }
    
    .results-title {
      font-size: 1.5rem;
    }
  }
</style>