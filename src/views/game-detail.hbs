<article>
  <div class="row">
    <div class="col-md-4 mb-4">
      {{#if game.thumbnail}}
        <img src="{{game.thumbnail}}" class="img-fluid rounded mb-3" alt="{{game.name}}">
      {{else}}
        <div class="bg-light p-5 text-center text-muted rounded">
          Imagen no disponible
        </div>
      {{/if}}
      
      <div class="card mb-3">
        <div class="card-header bg-primary text-white">
          <h2 class="h5 mb-0">Detalles del Juego</h2>
        </div>
        <ul class="list-group list-group-flush">
          {{#if game.designer}}
            <li class="list-group-item">
              <strong>Diseñador:</strong> {{game.designer}}
            </li>
          {{/if}}
          {{#if game.year}}
            <li class="list-group-item">
              <strong>Año:</strong> {{game.year}}
            </li>
          {{/if}}
          {{#if game.minPlayers}}
            <li class="list-group-item">
              <strong>Jugadores:</strong> {{game.minPlayers}} 
              {{#if game.maxPlayers}}- {{game.maxPlayers}}{{/if}}
            </li>
          {{/if}}
          {{#if game.playingTime}}
            <li class="list-group-item">
              <strong>Tiempo de juego:</strong> {{game.playingTime}} minutos
            </li>
          {{/if}}
          {{#if game.genre}}
            <li class="list-group-item">
              <strong>Género:</strong> {{game.genre}}
            </li>
          {{/if}}
          {{#if game.mechanic}}
            <li class="list-group-item">
              <strong>Mecánica:</strong> {{game.mechanic}}
            </li>
          {{/if}}
          {{#if game.publisher}}
            <li class="list-group-item">
              <strong>Editorial:</strong> {{game.publisher}}
            </li>
          {{/if}}
        </ul>
      </div>
    </div>
    
    <div class="col-md-8">
      <h1 class="mb-3">{{game.name}}</h1>
      
      <div class="mb-4">
        <h2 class="h4">Descripción</h2>
        <p>{{game.abstract}}</p>
      </div>
      
      <div class="d-flex justify-content-between">
        <a href="/search?q={{encodeURIComponent (split game.name ' '.[0])}}" class="btn btn-outline-secondary">
          Volver a resultados
        </a>
        <a href="{{game.uri}}" class="btn btn-outline-primary" target="_blank" rel="noopener">
          Ver en DBpedia
        </a>
      </div>
    </div>
  </div>
</article>